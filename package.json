{
    "name": "@hargwit/utils",
    "version": "1.0.0",
    "description": "A number of common utility functions with no dependencies",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "format": "eslint . --ext .ts --fix && prettier 'src/**/*.{json,ts}' --write",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hargwit/utils.git"
    },
    "keywords": [
        "typescript",
        "utils"
    ],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/hargwit/utils/issues"
    },
    "homepage": "https://github.com/hargwit/utils#readme",
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^12.0.2",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint && npm run test"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix"
        ],
        "**/*.{json,ts}": [
            "prettier --write"
        ]
    }
}
